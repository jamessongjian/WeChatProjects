/* 书签样式排队时间标签 */
.queue-bookmark {
  position: absolute;
  bottom: 10rpx;
  left: 0;
  background: linear-gradient(to right, rgba(83, 193, 120, 1) 0%, rgba(83, 193, 120, 0.85) 100%);
  color: white;
  padding: 4rpx 14rpx 4rpx 10rpx;
  font-size: 20rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 0 8rpx 8rpx 0;
  box-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.25), inset 0 -2rpx 0 rgba(0, 0, 0, 0.1);
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: translateY(0);
  transition: all 0.2s ease;
  border-left: 3rpx solid rgba(83, 193, 120, 1.0);
}

.queue-bookmark:after {
  content: '';
  position: absolute;
  top: -6rpx;
  left: 0;
  width: 6rpx;
  height: 6rpx;
  background-color: rgba(60, 140, 90, 0.9);
  border-radius: 0 0 3rpx 0;
}

.queue-bookmark:hover {
  transform: translateY(-2rpx);
  box-shadow: 2rpx 4rpx 10rpx rgba(0, 0, 0, 0.3), inset 0 -2rpx 0 rgba(0, 0, 0, 0.1);
}

.info-card .card-image-container .queue-bookmark[data-wait-time="good"] {
  background: linear-gradient(to right, rgba(83, 193, 120, 1) 0%, rgba(83, 193, 120, 0.85) 100%);
  border-left: 3rpx solid rgba(83, 193, 120, 1.0);
}

.info-card .card-image-container .queue-bookmark[data-wait-time="good"]:after {
  background-color: rgba(60, 140, 90, 0.9);
}

.info-card .card-image-container .queue-bookmark[data-wait-time="medium"] {
  background: linear-gradient(to right, rgba(245, 166, 35, 1) 0%, rgba(245, 166, 35, 0.85) 100%);
  border-left: 3rpx solid rgba(245, 166, 35, 1.0);
}

.info-card .card-image-container .queue-bookmark[data-wait-time="medium"]:after {
  background-color: rgba(190, 130, 30, 0.9);
}

.info-card .card-image-container .queue-bookmark[data-wait-time="busy"] {
  background: linear-gradient(to right, rgba(230, 67, 64, 1) 0%, rgba(230, 67, 64, 0.85) 100%);
  border-left: 3rpx solid rgba(230, 67, 64, 1.0);
}

