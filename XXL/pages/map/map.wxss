.map-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  /* 为底部tabBar预留空间 */
  padding-bottom: 75px;
  box-sizing: border-box;
}

.map {
  width: 100%;
  height: 100%;
  margin-top: calc(80rpx + env(safe-area-inset-top)); /* 为顶部游乐场选择器留出空间 */
}

.filter-container {
  position: absolute;
  top: calc(80rpx + env(safe-area-inset-top) + 10rpx); /* 调整顶部距离，避开游乐场选择器 */
  left: 10rpx;
  right: 10rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  z-index: 10;
  background-color: rgba(255, 255, 255, 0.9);
  padding: 8rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.filter-row {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.filter-row-second {
  margin-top: 4rpx;
}

.filter-button {
  padding: 6rpx 16rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 6rpx;
  font-size: 22rpx;
  color: #333;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.filter-button.active {
  background: #07c160;
  color: #fff;
}

.filter-button.refresh-button {
  background: rgba(7, 193, 96, 0.1);
  color: #07c160;
  border: 1rpx solid #07c160;
  margin-left: auto;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.filter-button.refresh-button:active {
  background: rgba(7, 193, 96, 0.2);
}

.filter-button.refresh-button .iconfont {
  font-size: 20rpx;
}

.filter-button.nearby-button {
  background: rgba(64, 158, 255, 0.1);
  color: #409eff;
  border: 1rpx solid #409eff;
}

.filter-button.nearby-button:active {
  background: rgba(64, 158, 255, 0.2);
}

.filter-item,
.filter-item[data-type="all"],
.filter-item[data-type="attraction"],
.filter-item[data-type="performance"],
.filter-item[data-type="favorite"],
.filter-item[data-type="closed"],
.filter-item.refresh-button {
  position: static;
  top: auto;
  left: auto;
}

/* 修改遮罩层样式 - 确保能拦截所有事件包括marker点击 */
.card-overlay {
  position: fixed;
  top: 0;  /* 覆盖整个屏幕，而不仅仅是卡片区域 */
  left: 0;
  right: 0;
  bottom: 0;
  background-color: transparent;
  z-index: 900;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
  /* 为底部留出适当的安全区域 */
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.card-overlay.show {
  opacity: 1;
  pointer-events: auto; /* 只在显示时启用pointer-events */
}

/* 增强卡片自身的样式，使其在没有蒙层的情况下更加突出 */
.info-card {
  position: relative;
  width: 95vw;         /* 使用视口宽度，适配不同屏幕 */
  max-width: 800rpx;   /* 最大宽度，防止过宽 */
  max-height: 75vh;    /* 减小最大高度，为底部留出更多空间 */
  margin: 0 auto;
  margin-bottom: calc(40rpx + env(safe-area-inset-bottom)); /* 减少底部间距，保持适当距离 */
  z-index: 1000;
  background-color: #ffffff;
  border-radius: 16px;
  box-shadow: 0 6px 24px rgba(0, 0, 0, 0.2); /* 增强阴影效果 */
  overflow: hidden;
  transform: translateY(100%); /* 初始状态在屏幕底部以外 */
  transition: all 0.3s ease;
  pointer-events: auto;
  touch-action: auto;
  isolation: isolate;
}

/* 添加反向动画效果 */
.card-overlay.show .info-card {
  transform: translateY(0); /* 显示时移动到可见区域 */
}

/* 为卡片内所有元素添加点击事件捕获 */
.info-card .card-header,
.info-card .card-content,
.info-card .card-actions,
.info-card .card-title,
.info-card .close-button,
.info-card .card-image-container,
