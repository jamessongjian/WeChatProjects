/* 用户统计信息行 */
.user-stats-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx; /* 恢复原来的左右内边距 */
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  border-radius: 16rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  width: 100%; /* 确保使用全部可用宽度 */
  box-sizing: border-box; /* 确保内边距不会增加总宽度 */
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; /* 确保垂直居中 */
  gap: 4rpx; /* 保持减小的垂直间距 */
  min-width: 0; /* 允许弹性收缩 */
  padding: 0; /* 移除水平内边距 */
}

/* 给有效期列更多空间 */
.stat-item:nth-child(3) {
  flex: 1.5; /* 有效期列更宽一些 */
}

/* 确保第一个和最后一个项目与边缘的距离相等 */
.stat-item:first-child {
  padding-left: 4rpx;
}

.stat-item:last-child {
  padding-right: 4rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #757575;
  font-weight: 500;
}

.stat-value {
  font-size: 24rpx;
  font-weight: 600;
  color: #2c3e50;
  white-space: nowrap; /* 防止换行 */
  overflow: hidden; /* 隐藏溢出内容 */
  text-overflow: ellipsis; /* 超长时显示省略号 */
  max-width: 100%; /* 确保不会超出父容器 */
  text-align: center; /* 居中对齐 */
}

.stat-divider {
  width: 1rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.1);
  margin: 0 8rpx; /* 减小左右边距，使其更均匀 */
  flex: 0 0 1rpx; /* 确保分隔线不会伸缩 */
}

