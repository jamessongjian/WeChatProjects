.plan-container {
  padding: 20rpx;
  background: #f8f9fa;
  min-height: 100vh;
}

/* 标签页样式 */
.tabs {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #333;
  position: relative;
  transition: all 0.3s;
}

.tab.active {
  color: #07C160;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20%;
  width: 60%;
  height: 4rpx;
  background: #07C160;
  border-radius: 2rpx;
}

.plan-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.plan-item {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.plan-header {
  padding: 20rpx;
  background: linear-gradient(to right, #07C160, #09b85a);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.plan-title-container {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 16rpx;
}

.plan-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
}

.queue-savings-tip {
  font-size: 24rpx;
  color: #2E7D32;
  background: rgba(255, 255, 255, 0.95);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(76, 175, 80, 0.6);
  font-weight: 600;
}

.plan-header-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.favorite-btn {
  background: transparent;
  border: none;
  padding: 8rpx 12rpx;
  margin: 0;
  display: flex;
  align-items: center;
  gap: 6rpx;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.favorite-icon {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1;
  transition: all 0.2s ease;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

.favorite-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1;
  transition: all 0.2s ease;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

.favorite-btn.favorited .favorite-icon {
  color: #FFD700;
  text-shadow: 0 0 12rpx rgba(255, 215, 0, 0.8);
}

.favorite-btn.favorited .favorite-text {
  color: #FFD700;
  text-shadow: 0 0 8rpx rgba(255, 215, 0, 0.6);
}

.plan-stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.plan-time, .plan-score {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.plan-summary {
  padding: 16rpx 20rpx;
  background: #f8f9fa;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
}

.summary-item {
  font-size: 24rpx;
  color: #666;
}

/* 时间轴样式 */
.timeline {
  padding: 30rpx 20rpx;
  position: relative;
}

.timeline-item {
  position: relative;
  padding-left: 40rpx;
  margin-bottom: 30rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: 0;
  top: 0;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #07C160;
  z-index: 2;
}

.timeline-line {
  position: absolute;
  left: 9rpx;
  top: 20rpx;
  bottom: -30rpx;
  width: 2rpx;
  background: #07C160;
  z-index: 1;
}

.timeline-item:last-child .timeline-line {
  display: none;
}

.timeline-content {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.time-slot {
  padding: 16rpx 20rpx;
  background: #f8f9fa;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.time {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.duration {
  font-size: 24rpx;
  color: #666;
}

.project-card {
  display: flex;
  padding: 20rpx;
  gap: 20rpx;
}

.project-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  object-fit: cover;
  flex-shrink: 0;
}

.project-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.project-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.project-detail {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.queue-time, .rest-time {
  font-size: 24rpx;
  color: #666;
} 