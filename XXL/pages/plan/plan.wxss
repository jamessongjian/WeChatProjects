.plan-container {
  padding: 20rpx;
  padding-bottom: 75px;
  background: #f8f9fa;
  min-height: 100vh;
  padding-top: calc(80rpx + env(safe-area-inset-top) + 20rpx); /* 为游乐场选择器留出空间 */
  box-sizing: border-box;
}

/* 游乐场选择器样式 - 与首页保持一致 */
.park-selector {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start; /* 改为左对齐 */
  background-color: #ffffff;
  position: fixed;
  top: 0;
  left: 0;
  padding-top: env(safe-area-inset-top); /* 适配不同机型状态栏 */
  padding-left: 20rpx; /* 添加左边距 */
  z-index: 9999;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 为picker组件添加高z-index */
.park-selector picker {
  z-index: 9999 !important;
}

.park-selector::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 100 100"><circle cx="25" cy="25" r="5" fill="rgba(255,255,255,0.1)"/><circle cx="75" cy="75" r="8" fill="rgba(255,255,255,0.1)"/><circle cx="50" cy="50" r="3" fill="rgba(255,255,255,0.1)"/></svg>');
  opacity: 0.8;
  z-index: 0;
}

.park-picker {
  display: flex;
  align-items: center;
  padding: 6rpx 20rpx;
  border-radius: 24rpx;
  background-color: #f8f8f8;
  position: relative;
  z-index: 1;
  transition: all 0.2s ease;
  transform: translateY(-20rpx);
}

.park-picker:active {
  background-color: #f0f0f0;
}

.current-park {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.current-park::after {
  content: '🎡';
  margin-left: 6rpx;
  font-size: 24rpx;
}

.picker-arrow {
  margin-left: 8rpx;
  font-size: 22rpx;
  color: #666666;
}

/* 收藏区域样式 */
