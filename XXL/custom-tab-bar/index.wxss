.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 65px;
  background: white;
  display: flex;
  padding-bottom: 10px;
  border-top: 1px solid #e5e5e5;
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.1);
  z-index: 50;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 4px;
  transition: all 0.2s ease;
}

.tab-bar-item-active {
  color: #07C160;
}

.tab-bar-text {
  font-size: 15px;
  line-height: 1.2;
  font-weight: 400;
  color: #666666;
}

.tab-bar-item-active .tab-bar-text {
  color: #07C160;
  font-weight: 600;
}
