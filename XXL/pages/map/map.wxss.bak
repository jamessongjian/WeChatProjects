/* 状态标签区基础样式 - 保留，两种卡片共用 */
.card-status {
  margin-bottom: 12rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.status-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  background-color: #1aad19;
  color: white;
  display: inline-block;
}

/* 删除差异化颜色样式，恢复统一样式 */
.status-tag.flag-status-tag {
  background-color: #1aad19;
  color: white;
}

.status-closed {
  background-color: #8e8e93;
}

.status-upcoming {
  background-color: #007aff;
}

.status-over {
  background-color: #8e8e93;
}

/* 快速通道标签 */
.express-tag {
  background-color: rgba(25, 118, 210, 0.08);
  color: #1976d2;
  border: 1rpx solid rgba(25, 118, 210, 0.2);
}

/* 身高限制标签 */
.height-tag {
  background-color: rgba(255, 143, 0, 0.08);
  color: #f57c00;
  border: 1rpx solid rgba(255, 143, 0, 0.2);
}

/* 普通特性标签 */
.flag-status-tag {
  background-color: rgba(97, 97, 97, 0.06);
  color: #757575;
  border: 1rpx solid rgba(97, 97, 97, 0.12);
}

/* 确保flag-status-tag的第一个颜色不同 - 对应快速通道或支持快通 */
.flag-status-tag:nth-child(1) {
  background-color: rgba(25, 118, 210, 0.08);
  color: #1976d2;
  border: 1rpx solid rgba(25, 118, 210, 0.2);
}

/* 确保flag-status-tag的第二个颜色不同 - 对应身高限制 */
.flag-status-tag:nth-child(2) {
  background-color: rgba(255, 143, 0, 0.08);
  color: #f57c00;
  border: 1rpx solid rgba(255, 143, 0, 0.2);
}

/* 确保flag-status-tag的第三个及以后颜色风格统一 */
.flag-status-tag:nth-child(n+3) {
  background-color: rgba(97, 97, 97, 0.06);
  color: #757575;
  border: 1rpx solid rgba(97, 97, 97, 0.12);
}

/* 交替显示不同的颜色，使第四个和第六个标签有不同颜色 */
.flag-status-tag:nth-child(4) {
  background-color: rgba(67, 160, 71, 0.08);
  color: #43a047;
  border: 1rpx solid rgba(67, 160, 71, 0.2);
}

.flag-status-tag:nth-child(6) {
  background-color: rgba(239, 108, 0, 0.08);
  color: #ef6c00;
  border: 1rpx solid rgba(239, 108, 0, 0.2);
}

/* 原始表演场次样式 */
.show-times {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 6rpx; /* 增加间距 */
  flex-shrink: 0;
  min-height: 28rpx; /* 统一行高 */
  margin-bottom: 2rpx; /* 与其他元素保持一致的间距 */
}

.show-times-label {
  font-size: 20rpx; /* 统一字体大小 */
  color: #666;
  white-space: nowrap;
  margin-bottom: 0;
}

.show-times-icon {
  color: #888;
  margin-right: 6rpx; /* 增加图标右边距 */
  font-size: 22rpx; /* 调整图标大小 */
  display: flex;
  align-items: center;
  justify-content: center;
}

.show-time-tags {
  display: flex;
  flex-wrap: nowrap;
  gap: 6rpx; /* 增加间距 */
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  height: 28rpx; /* 统一行高 */
}

.show-time-tag {
  font-size: 20rpx; /* 统一字体大小 */
  padding: 0 8rpx; /* 调整内边距 */
  border-radius: 4rpx;
  background-color: #f5f5f5;
  color: #666;
  white-space: nowrap;
  height: 28rpx; /* 统一高度 */
  line-height: 28rpx; /* 统一行高 */
  display: flex;
  align-items: center;
}

.show-time-tag.next-show {
  background-color: #e3f2fd;
  color: #1976d2;
  font-weight: 500;
}

/* 推荐查询 */
.query-suggestions {
  margin-top: auto; /* 将查询建议推到底部 */
  display: flex;
  align-items: center;
}

.query-icon {
  color: #1976d2; /* 改为蓝色 */
  font-size: 22rpx; /* 调整图标大小 */
  margin-right: 8rpx; /* 增加右边距 */
  display: flex;
  align-items: center;
  justify-content: center;
  width: 22rpx; /* 确保图标有固定宽度 */
  height: 22rpx; /* 确保图标有固定高度 */
}

.query-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx; /* 增加间距 */
}

.query-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx; /* 增加内边距 */
  border-radius: 12rpx; /* 更圆润的边角 */
  background-color: rgba(25, 118, 210, 0.08); /* 淡蓝色背景 */
  color: #1976d2; /* 蓝色文字 */
  border: 1rpx solid rgba(25, 118, 210, 0.2); /* 添加淡蓝色边框 */
  transition: all 0.3s; /* 添加过渡效果 */
}

.query-tag:active {
  background-color: rgba(25, 118, 210, 0.15); /* 点击时背景稍深 */
}

/* 卡片底部操作按钮 */
.card-actions {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.action-button {
  flex: 1;
