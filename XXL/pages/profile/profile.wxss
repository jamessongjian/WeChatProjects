/* 个人页面样式 */
.profile-container {
  display: flex;
  flex-direction: column;
  padding: 0;
  padding-bottom: 75px;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 页面标题栏样式 */
.page-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: #ffffff;
  padding: 20rpx 40rpx;
  padding-top: calc(20rpx + env(safe-area-inset-top)); /* 适配刘海屏 */
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  text-align: center;
  display: block;
}

/* 用户登录/信息区域样式 */
.user-login-section {
  margin: 20rpx;
  margin-bottom: 24rpx;
}

/* 用户卡片 - 统一样式 */
.user-card {
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

/* 确保已登录卡片不会有绿色背景 */
.logged-card {
  background: #ffffff !important;
}


/* 游客信息区域 - 统一面板 */
.guest-info-section {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}


.guest-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  border: 3rpx solid #e0e0e0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.guest-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.guest-status-tag {
  padding: 4rpx 12rpx;
  background: #f5f5f5;
  color: #757575;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.status-text {
  font-size: 20rpx;
}

/* 欢迎信息 */
.welcome-message {
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  border-radius: 16rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.welcome-text {
  font-size: 24rpx;
  color: #6c757d;
  text-align: center;
  display: block;
}

