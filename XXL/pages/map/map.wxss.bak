/* 地图标记样式增强 */
.map-marker {
  position: relative;
  filter: drop-shadow(0 2rpx 8rpx rgba(0, 0, 0, 0.2));
  transition: all 0.3s ease;
  transform-origin: 50% 75%; /* 从中心偏下放大，适应三角形标记 */
  will-change: transform;
}

.map-marker-selected {
  filter: drop-shadow(0 4rpx 12rpx rgba(0, 0, 0, 0.4));
  transform: scale(1.15);
  transform-origin: 50% 75%; /* 从中心偏下放大，适应三角形标记 */
  animation: pulse 1.5s infinite ease-in-out;
}

@keyframes pulse {
  0% { transform: scale(1.15); }
  50% { transform: scale(1.25); }
  100% { transform: scale(1.15); }
}

/* 增强霸天虎标记的显示效果 */
.transformers-marker {
  filter: drop-shadow(0 3rpx 12rpx rgba(0, 0, 0, 0.35));
  z-index: 10;
  transform-origin: 50% 75%; /* 从中心偏下放大，适应三角形标记 */
  animation: hover 3s infinite ease-in-out;
}

@keyframes hover {
  0% { transform: translateY(0) scale(1); }
  50% { transform: translateY(-3rpx) scale(1.05); }
  100% { transform: translateY(0) scale(1); }
}

