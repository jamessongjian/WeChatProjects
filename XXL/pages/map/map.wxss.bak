/* 定义项目名称和演出名称的共同样式 */
.attraction-name, .show-name {
  font-size: 22rpx; /* 稍微缩小字体 */
  font-weight: 500;
  color: #333;
  overflow: hidden;
}

/* 定义地图标记中的项目名称专用样式 */
.attraction-name {
  font-size: 24rpx; /* 稍微增大字体提高可读性 */
  font-weight: 500;
  color: #333;
  line-height: 1.3; /* 调整行高以便更好地显示多行文本 */
  text-align: center;
  display: -webkit-box;
  -webkit-line-clamp: 2; /* 允许最多显示2行 */
  -webkit-box-orient: vertical;
  overflow: hidden;
  width: 100%; /* 确保使用全部可用宽度 */
  word-break: break-word; /* 使用break-word而不是break-all，以实现更自然的断行 */
  padding: 0 4rpx;
  max-height: none; /* 移除最大高度限制 */
  height: auto; /* 允许自动调整高度 */
  white-space: normal !important; /* 强制允许换行 */
  text-overflow: ellipsis; /* 在截断时显示省略号 */
}

/* 定义演出列表中的演出名称专用样式 */
.show-name {
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 70%;
}

.attraction-wait, .show-time {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  color: white;
  font-weight: bold;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* 左侧排队时间部分 */
.queue-time-part {
  width: 110rpx; /* 保持宽度固定 */
  background: #FF9600; /* 设置默认背景色为橙色 */
  border-radius: 12rpx 0 0 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  position: relative;
  z-index: 2;
  box-shadow: inset -1rpx 0 0 rgba(0, 0, 0, 0.1);
  min-height: 80rpx; /* 与attraction-name-part一致的最小高度 */
  /* 增强立体感 */
  box-shadow: -2rpx 0 8rpx rgba(0, 0, 0, 0.2) inset, 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  background-image: linear-gradient(to bottom, rgba(255, 255, 255, 0.2), rgba(0, 0, 0, 0.1));
  display: flex;
  flex-direction: column;
  justify-content: space-evenly; /* 在垂直方向上均匀分布内容 */
  padding: 8rpx 0; /* 添加上下内边距 */
}

/* 右侧项目名称部分 */
.attraction-name-part {
  flex: 1;
  background: white;
  border-radius: 0 12rpx 12rpx 0;
  padding: 12rpx 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 1;
  min-height: 80rpx; /* 增加最小高度以适应双行文本 */
  width: 240rpx; /* 增加名称部分的宽度以容纳更多文本 */
  /* 增强立体感 */
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  box-sizing: border-box; /* 确保padding不会增加元素尺寸 */
}

/* 排队时间数字样式 */
.queue-time-number {
  font-size: 38rpx;
  font-weight: bold;
  line-height: 1;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
  text-align: center;
  color: white;
  padding: 0 4rpx;
  letter-spacing: 1rpx;
  /* 优化数字显示 */
  font-size: 42rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  transform: scale(1.05);
  margin: 2rpx 0;
  letter-spacing: 0;
}

/* 排队时间单位样式 */
.queue-time-unit {
  font-size: 20rpx;
  line-height: 1;
  margin-top: 4rpx;
  opacity: 0.9;
  text-align: center;
  color: white;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
  /* 优化单位显示 */
  font-size: 22rpx;
  letter-spacing: 0.5rpx;
  margin-top: 2rpx;
  font-weight: 500;
}

/* 根据排队时间变化左侧背景颜色 */
.queue-time-part[data-wait-time="good"] {
  background: #53c178; /* 绿色，表示排队时间短 */
  background-image: linear-gradient(to bottom, rgba(104, 214, 134, 0.9), rgba(60, 174, 95, 0.9));
}

.queue-time-part[data-wait-time="medium"] {
  background: #f5a623; /* 橙色，表示排队时间适中 */
  background-image: linear-gradient(to bottom, rgba(250, 179, 63, 0.9), rgba(224, 147, 13, 0.9));
}

.queue-time-part[data-wait-time="busy"] {
  background: #e64340; /* 红色，表示排队时间长 */
  background-image: linear-gradient(to bottom, rgba(241, 93, 91, 0.9), rgba(204, 39, 36, 0.9));
}

.queue-time-part[data-wait-time="closed"] {
  background: #888888; /* 灰色，表示已关闭 */
  background-image: linear-gradient(to bottom, rgba(160, 160, 160, 0.9), rgba(120, 120, 120, 0.9));
}

/* 通用标记点水平布局气泡样式 */
.custom-callout-horizontal {
  width: 350rpx; /* 增加整体宽度，为名称部分提供更多空间 */
  background: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  overflow: visible;
  position: relative;
  transform: translateX(-50%) translateY(-120%); /* 减小上移距离，与标记更靠近 */
  margin-bottom: 15rpx; /* 减小底部边距 */
  display: flex;
  flex-direction: row;
  align-items: stretch;
  border: none;
  transition: all 0.3s ease;
  /* 增强整体立体感 */
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.2);
  transform: translateX(-50%) translateY(-120%) perspective(800rpx) rotateX(2deg);
  z-index: 5;
  min-height: 100rpx; /* 添加最小高度以适应多行文本 */
}

.custom-callout-horizontal:after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 12rpx solid #ffffff;
  transform: translateX(-50%);
  filter: drop-shadow(0 3rpx 3rpx rgba(0, 0, 0, 0.15));
  z-index: 1;
}

