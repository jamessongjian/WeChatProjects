/* 详情页整体容器 */
.details-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f6f7f9;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading {
  width: 48px;
  height: 48px;
  border: 4px solid #e0e0e0;
  border-top: 4px solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 头部区域 */
.header {
  position: relative;
  width: 100%;
  height: 240px;
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.header-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20px 16px;
  background: linear-gradient(to top, rgba(0,0,0,0.8), rgba(0,0,0,0));
  color: white;
}

.item-name {
  font-size: 22px;
  font-weight: bold;
  margin-bottom: 4px;
  text-shadow: 0 1px 2px rgba(0,0,0,0.5);
}

.item-location {
  font-size: 14px;
  opacity: 0.9;
  margin-bottom: 8px;
}

.item-type-badge {
  display: inline-block;
  padding: 2px 8px;
  border-radius: 12px;
  font-size: 12px;
  background-color: rgba(255,255,255,0.25);
}

.item-type-badge.attraction {
  background-color: rgba(24, 144, 255, 0.8);
}

.item-type-badge.performance {
  background-color: rgba(114, 46, 209, 0.8);
}

.item-type-badge.restaurant {
  background-color: rgba(250, 140, 22, 0.8);
}

.item-type-badge.shop {
  background-color: rgba(64, 169, 255, 0.8);
}

