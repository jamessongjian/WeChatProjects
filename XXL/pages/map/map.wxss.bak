.map-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.map {
  width: 100%;
  height: 100%;
  margin-top: 0; /* 移除顶部空间 */
}

.filter-container {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  right: 10rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  z-index: 10;
  background-color: rgba(255, 255, 255, 0.9);
  padding: 8rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.filter-button {
  padding: 6rpx 16rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 6rpx;
  font-size: 22rpx;
  color: #333;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.filter-button.active {
  background: #07c160;
  color: #fff;
}

.filter-button.refresh-button {
  background: rgba(7, 193, 96, 0.1);
  color: #07c160;
  border: 1rpx solid #07c160;
  margin-left: auto;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.filter-button.refresh-button:active {
  background: rgba(7, 193, 96, 0.2);
}

.filter-button.refresh-button .iconfont {
  font-size: 20rpx;
}

.filter-item,
.filter-item[data-type="all"],
.filter-item[data-type="attraction"],
.filter-item[data-type="performance"],
.filter-item[data-type="favorite"],
.filter-item[data-type="closed"],
.filter-item.refresh-button {
  position: static;
  top: auto;
  left: auto;
}

/* 添加遮罩层样式 */
.card-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 900;
  display: flex;
  justify-content: center;
  align-items: flex-end; /* 改为底部对齐，确保卡片显示在底部 */
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
  touch-action: none; /* 阻止系统默认的触摸操作 */
}

.card-overlay.show {
  opacity: 1;
  pointer-events: auto;
}

/* 调整信息卡片样式，使其适应新的遮罩层布局 */
.info-card {
  position: relative;
  width: 95vw;         /* 使用视口宽度，适配不同屏幕 */
  max-width: 800rpx;   /* 最大宽度，防止过宽 */
  max-height: 80%;
  margin: 0 auto;
  margin-bottom: 20rpx; /* 从底部留出一定空间 */
  z-index: 1000;
  background-color: #ffffff;
  border-radius: 16px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  overflow: hidden;
  transform: translateY(100%); /* 初始状态在屏幕底部以外 */
  transition: all 0.3s ease;
  pointer-events: auto;
  touch-action: auto;
  isolation: isolate;
}

/* 添加反向动画效果 */
.card-overlay.show .info-card {
  transform: translateY(0); /* 显示时移动到可见区域 */
}

/* 为卡片内所有元素添加点击事件捕获 */
.info-card .card-header,
.info-card .card-content,
.info-card .card-actions,
.info-card .card-title,
.info-card .close-button,
.info-card .card-image-container,
.info-card .card-info,
.info-card .card-status,
.info-card .basic-info,
.info-card .project-description,
.info-card .show-times-container,
.info-card .query-suggestions {
  pointer-events: auto;
}

/* 为卡片添加动画效果 */
@keyframes fadeInScale {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx 8rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.close-button {
  font-size: 36rpx;
  color: #999;
  padding: 0 10rpx;
}

.card-content {
  display: flex;
  padding: 12rpx 20rpx;
  overflow-y: auto;
  flex: 1;
}

.card-image-container {
  position: relative;
  margin-right: 20rpx;
  flex-shrink: 0;
  width: 160rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.card-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  object-fit: cover;
}

/* 书签样式排队时间标签 */
.queue-bookmark {
  position: absolute;
  bottom: 10rpx;
  left: 0;
  background: linear-gradient(to right, rgba(83, 193, 120, 1) 0%, rgba(83, 193, 120, 0.85) 100%);
  color: white;
  padding: 4rpx 14rpx 4rpx 10rpx;
  font-size: 20rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 0 8rpx 8rpx 0;
  box-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.25), inset 0 -2rpx 0 rgba(0, 0, 0, 0.1);
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: translateY(0);
  transition: all 0.2s ease;
  border-left: 3rpx solid rgba(83, 193, 120, 1.0);
}

.queue-bookmark:after {
  content: '';
  position: absolute;
  top: -6rpx;
  left: 0;
  width: 6rpx;
  height: 6rpx;
  background-color: rgba(60, 140, 90, 0.9);
  border-radius: 0 0 3rpx 0;
}

.queue-bookmark:hover {
  transform: translateY(-2rpx);
  box-shadow: 2rpx 4rpx 10rpx rgba(0, 0, 0, 0.3), inset 0 -2rpx 0 rgba(0, 0, 0, 0.1);
}

.info-card .card-image-container .queue-bookmark[data-wait-time="good"] {
  background: linear-gradient(to right, rgba(83, 193, 120, 1) 0%, rgba(83, 193, 120, 0.85) 100%);
  border-left: 3rpx solid rgba(83, 193, 120, 1.0);
}

.info-card .card-image-container .queue-bookmark[data-wait-time="good"]:after {
  background-color: rgba(60, 140, 90, 0.9);
}

.info-card .card-image-container .queue-bookmark[data-wait-time="medium"] {
  background: linear-gradient(to right, rgba(245, 166, 35, 1) 0%, rgba(245, 166, 35, 0.85) 100%);
  border-left: 3rpx solid rgba(245, 166, 35, 1.0);
}

.info-card .card-image-container .queue-bookmark[data-wait-time="medium"]:after {
  background-color: rgba(190, 130, 30, 0.9);
}

.info-card .card-image-container .queue-bookmark[data-wait-time="busy"] {
  background: linear-gradient(to right, rgba(230, 67, 64, 1) 0%, rgba(230, 67, 64, 0.85) 100%);
  border-left: 3rpx solid rgba(230, 67, 64, 1.0);
}

.info-card .card-image-container .queue-bookmark[data-wait-time="busy"]:after {
  background-color: rgba(180, 60, 50, 0.9);
}

/* 关闭状态 - 同时支持类和数据属性 */
.info-card .card-image-container .queue-bookmark.closed,
.info-card .card-image-container .queue-bookmark[data-wait-time="closed"] {
  background: linear-gradient(to right, rgba(136, 136, 136, 1) 0%, rgba(136, 136, 136, 0.85) 100%);
  border-left: 3rpx solid rgba(136, 136, 136, 1.0);
}

.info-card .card-image-container .queue-bookmark.closed:after,
.info-card .card-image-container .queue-bookmark[data-wait-time="closed"]:after {
  background-color: rgba(100, 100, 100, 0.9);
}

.bookmark-time {
  font-weight: bold;
  font-size: 20rpx;
  line-height: 1;
  margin-right: 2rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

.bookmark-unit {
  font-size: 18rpx;
  line-height: 1;
  opacity: 0.9;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* 卡片信息区域基础样式 */
.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  min-width: 0;
  height: 200rpx; /* 设置与图片相同的高度 */
}

