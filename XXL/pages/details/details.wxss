  border-radius: 6px;
  box-shadow: 0 1px 4px rgba(0,0,0,0.1);
  z-index: 1;
  transform: scale(0.95);
}

.action-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8px 12px;
}

.action-text {
