  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 16rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.project-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
  background-color: #eee;
}

.project-info {
  flex: 1;
}

.project-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.project-detail {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.queue-time, .rest-time {
  font-size: 24rpx;
  color: #666;
  background: rgba(7, 193, 96, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 30rpx;
}

